<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_home"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#147fbb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5">

        <android.support.v7.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxWidth="300dp"
            app:closeIcon="@drawable/close_hint_icon"
            app:queryBackground="@drawable/searchview_background"
            app:searchHintIcon="@drawable/search_hint_icon"
            app:searchIcon="@drawable/search_icon_vector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:id="@+id/app_title"
            android:text="News Anytime"
            android:textColor="#ffffff"
            android:textSize="18dp"
            app:fontFamily="@font/pt_sans" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/bookmark_news_list"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bkmark_list_2" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.Toolbar>