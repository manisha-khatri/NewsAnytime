<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="2dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/top_stories_callback_Resp_Msg_holder1"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/top_stories_callback_prgss_bar1"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/top_stories_callback_resp_msg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/top_stories1_news_holder"
        android:visibility="gone"
        android:weightSum="4">

        <ImageView
            android:id="@+id/top_stories1_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/background_img_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/top_stories1_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:maxLines="3"
                android:text="@string/news_heading"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/top_stories1_published_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:gravity="right|bottom"
                android:text="1 day ago"
                android:textColor="#595B5D"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>
